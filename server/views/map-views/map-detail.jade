extends ../includes/layout
block main-content
    .container
        h1= map.name
        div.row
            div.col-md-3 Prizes
                ol.list-group
                    each prize, i in map.prizes
                        li.list-group-item
                            strong=  (i + 1) + '.'
                            span.badge= '$' + prize
            if user.role === 'administrator'
                div.col-md-3
                    div.alert-danger Remove this map
                        form(action='/maps/' + map._id + '/remove', method='POST')
                            div.text-center
                                button.btn.btn-danger DELETE
                                p.help-block There are no undo!
        div.row
            div.col-md-3 Respects
                ol.list-group
                    each respect, i in map.respectGiven
                        li.list-group-item
                            strong= (i + 1) + '.'
                            span.label.label-success.pull-right= respect
        div.row
            h4
                dic.alert-danger Damage to take from cars:&nbsp;&nbsp;&nbsp;
                    strong.text-danger= map.damageToTake

