extends ../includes/layout
block main-content
    div(class="container")
        div(class='row')
            div(class="col-md-12")
                h3 All available races for joining
                ul
                for singleRace in races
                    li
                        if singleRace.users.length == 1
                            a(href='#{singleRace._id}') Race on #{singleRace.map} and #{singleRace.users.length} driver
                        else
                            a(href='#{singleRace._id}') Race on #{singleRace.map} and #{singleRace.users.length} drivers
